<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gri"
    tools:context=".Kullanici_Listele2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">

        <TextView
            android:id="@+id/k_bolumadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="#fff"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#000"
            android:typeface="monospace" />
        <!--<Button
            android:layout_width="50dp"
            android:id="@+id/k_ekle"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:drawableStart="@drawable/plus"
            android:background="@drawable/buton_tasarimi"
            android:layout_height="50dp" />-->
    </LinearLayout>
    <ListView
        android:id="@+id/bolum_kullanicilar"
        android:layout_width="wrap_content"
        android:layout_height="460dp"
        android:padding="16dp"
        android:divider="@null"
        android:dividerHeight="8dp"></ListView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/yk_onayla"
            android:background="@drawable/buton_tasarimi"
            android:text="Seçili olanları onayla"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/k_sil"

            android:background="@drawable/buton_tasarimi"
            android:text="Seçili olanları sil"/>

    </LinearLayout>


</LinearLayout>